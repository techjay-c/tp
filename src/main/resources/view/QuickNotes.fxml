<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane fx:id="placeHolder" styleClass="pane-with-border" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <TextArea fx:id="quickNotes" editable="true" prefHeight="100" promptText="Type your notes here..." wrapText="true" />

  <HBox alignment="BOTTOM_RIGHT" fillHeight="false" maxHeight="-Infinity" maxWidth="-Infinity"
        minHeight="-Infinity" minWidth="-Infinity" spacing="10" StackPane.alignment="BOTTOM_RIGHT">
    <Button fx:id="saveButton" onAction="#handleSaveNotes" text="Save">
         <HBox.margin>
            <Insets bottom="3.0" />
         </HBox.margin>
    </Button>
    <Button fx:id="clearButton" onAction="#handleClearNotes" text="Clear">
         <HBox.margin>
            <Insets bottom="3.0" />
         </HBox.margin>
    </Button>
  </HBox>

</StackPane>
